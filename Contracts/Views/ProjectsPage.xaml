<common:LayoutAwarePage
    x:Class="Contracts.Views.ProjectsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Contracts.Views"
    xmlns:common="using:Contracts.Common"
       xmlns:converters="using:Contracts.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <CollectionViewSource x:Name="ProjectsViewSource" />
          
            <DataTemplate x:Key="ProjectTemplate">
                <Grid Background="DarkBlue"
                      Width="300" 
                      Height="200">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="75"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="{Binding Name}" 
                                   Grid.Row="0"
                                   Margin="20,10,0,0" 
                                   TextWrapping="Wrap"
                                   VerticalAlignment="Top"
                                   FontSize="24"
                                   FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Description}" 
                                   Grid.Row="1"
                                   Margin="20,0,0,0" 
                                   VerticalAlignment="Center"
                                   FontSize="18"/>
                    <StackPanel Orientation="Horizontal"
                                Grid.Row="2"
                                Margin="20,0,0,0"
                                VerticalAlignment="Top">
                        <TextBlock Text="Due"
                                   FontSize="18"/>
                        <TextBlock Text="{Binding DueDate}" 
                                   Margin="5,0,0,0" 
                                   FontSize="18"/>
                    </StackPanel>
                </Grid>
            </DataTemplate>

        </ResourceDictionary>
    </Page.Resources>

    <Page.BottomAppBar>
        <AppBar x:Name="ProjectsPageAppBar"
                Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0"
                            Orientation="Horizontal" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Top">
                    <AppBarButton x:Name="EditButton" Click="EditButton_Click" Icon="Edit" />


                </StackPanel>
                <StackPanel
                            Orientation="Horizontal" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="100,0,0,0" Width="683">


                    <AppBarButton x:Name="AddButton" Icon="Add" Click="AddButton_Click" />

                </StackPanel>
            </Grid>
        </AppBar>
    </Page.BottomAppBar>

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="BackButton" 
                    Click="BackButton_Click" 
                    Style="{StaticResource NavigationBackButtonNormalStyle}" Margin="0,41,0,0"/>
            <TextBlock x:Name="PageTitle" 
                       Text="My Projects" 
                       Grid.Column="1" 
                       IsHitTestVisible="false" 
                      Style="{StaticResource HeaderTextBlockStyle}" Margin="36,41,0,0"/>
        </Grid>

        <GridView x:Name="ProjectsGridView" 
                  Grid.Row="1"
                  Margin="110,50,0,0"
                  Foreground="White"     
                  SelectionMode="Single"
                  IsItemClickEnabled="True"
                  ItemsSource="{Binding Mode=OneWay, Source={StaticResource ProjectsViewSource}}" 
                  ItemTemplate="{StaticResource ProjectTemplate}"
                  ItemClick="ProjectsGridView_ItemClick"
                  SelectionChanged="ProjectsGridView_SelectionChanged">
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapGrid Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
        </GridView>


        <VisualStateManager.VisualStateGroups>

            <!-- Visual states reflect the application's view state -->
            <VisualStateGroup x:Name="ApplicationViewStates">
                <VisualState x:Name="FullScreenLandscape"/>
                <VisualState x:Name="Filled"/>

                <!-- The entire page respects the narrower 100-pixel margin convention for portrait -->
                <VisualState x:Name="FullScreenPortrait">
                    <!--<Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="BackButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource PortraitBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>-->
                </VisualState>

                <!-- The back button and title have different styles when snapped -->
                <VisualState x:Name="Snapped">
                    <!--<Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="BackButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PageTitle" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedPageHeaderTextStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>-->
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

    </Grid>
    </common:LayoutAwarePage>